<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card mt-5">
        <%= form_with(model:@user, local: true) do |f| %>
          <div class="card-body">
            <div class="card-title ml-3 mt-2">
              <div id="avatar_field" class="text-center" onClick="$('#profile').click()" >
                <%= avatar(@user, "profile-avatar") %> 
              </div>
              <div class="text-center">
              <%= f.submit "プロフィール写真を変更", class: "btn btn-sm btn-info", id:"btnChangePicture"%>
              </div>
            </div>
            <div>
              <%=f.file_field :avatar, class:"file-field", style: "display:none;", id: "profile"%>
              <%=f.hidden_field :avatar_cache, class:"profile-avatar"%>
            </div>
          </div>
          
          <%= render 'shared/user_error' %>

          <div class="card-body">
            <nav>
              <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" id="nav-info-tab" data-toggle="tab" href="#nav-info" role="tab" aria-controls="nav-info" aria-selected="true">プロファイルを編集</a>
                <a class="nav-item nav-link" id="nav-pw-tab" data-toggle="tab" href="#nav-pw" role="tab" aria-controls="nav-pw" aria-selected="false">パスワードを変更</a>
              </div>
            </nav>
            <div class="tab-content px-5 my-3" id="nav-tabContent">
              <div class="tab-pane fade show active" id="nav-info" role="tabpanel" aria-labelledby="nav-info-tab">
                <div class="form-group mx-auto">
                  <div>
                    <%= f.label :name, "名前" %>
                    <%= f.text_field :name, autofocus: true, class: "form-control"%>
                  </div>
                  <div class="mt-4">
                    <%= f.label :email, "メールアドレス"%>
                    <%= f.text_field :email, class: "form-control"%>
                  </div>
                  <div class="text-center my-4">
                    <%= f.submit "保存", class: "btn btn-info my-4"%>
                    <%= link_to "戻る", user_path, class: "btn btn-outline-info"%>
                  </div>
                </div>
              </div>
              <div class="tab-pane fade" id="nav-pw" role="tabpanel" aria-labelledby="nav-pw-tab">
                <div class="form-group mx-auto">
                  <div>
                    <%= f.label :password, "新しいパスワード"%>
                    <%= f.password_field :password, class: "form-control signin-box", placeholder: ""%>
                  </div>
                  <div class="mt-4">
                    <%= f.label :password_confirmation, "新しいパスワード再入力"%>
                    <%= f.password_field :password_confirmation, class: "form-control signin-box", placeholder: ""%>
                    <div class="text-center">
                      <small class="text-muted fas fa-exclamation-circle"> パスワードの長さは最低6文字です。</small>
                    </div>
                  </div>
                  <div class="text-center my-4">
                    <%= f.submit "保存", class: "btn btn-info my-4"%>
                    <%= link_to "戻る", user_path, class: "btn btn-outline-info"%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>