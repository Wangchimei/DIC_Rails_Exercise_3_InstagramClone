  <% @feeds.each do |feed| %>
    <div class="container mt-4">
      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <div class="row mx-0">
              <div class="col-2 px-0 ml-1">
                <div class="text-center">
                    <a href=""><img class="img-fluid rounded-circle" src="http://www.themashabrand.com/templates/bootsnipp/post/assets/img/users/4.jpg" alt="User"></a>
                </div>
              </div>
              <div class="col-8 my-auto">
                <div class="text-left">
                  <p class="h6 mb-0 ml-0">Benjamin Robinson</p>
                  <button type="button" class="btn btn-default px-0 py-0">
                    <span class="far fa-clock text-muted h7 mt-0 ml-0" aria-hidden="true"> <%= distance_of_time_in_words(feed.created_at, Time.now)%>前</span>
                  </button>
                </div>
              </div>
            </div>
            <div class="dropdown">
              <button class="btn btn-link" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="fa fa-ellipsis-h"></i>
              </button>
              <div class="dropdown-menu dropdown-menu-right">
                <%= link_to '編集', edit_feed_path(feed), class: "dropdown-item" %>
                <%= link_to '削除', feed_path(feed), method: :delete, data: {confirm: "投稿を削除しますか？"}, class: "dropdown-item" %>
              </div>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div>
            <%= image_tag feed.image.url, class:"card-image" if feed.image.url %>
          </div>
        </div>
        <div class="card-body">
          <div class="card-text ml-2 py-1">
            <%= feed.content %>
          </div>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-between align-items-center">
            <button type="button" class="btn btn-default px-0">
              <span class="far fa-comments h6" aria-hidden="true"> 12件</span>
            </button>
            <div>
              <%= link_to '詳細', feed_path(feed), class: "card-link" %>
            </div>
          </div>
        </div>
      </div>
    </div>
<%=link_to "new", new_feed_path%>
<%=link_to "edit",edit_feed_path(feed)%>
<%=link_to "edit",feed_path(feed)%>
  <%end%>
<div class="mb-5"></div>

